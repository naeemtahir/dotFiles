# Add following lines to $HOME/.bashrc or $HOME/.zshrc
#if [ -f $HOME/.git_aliases ]; then
#    . $HOME/.git_aliases
#fi
alias git_aliases='less $HOME/.git_aliases'

alias g='git'
alias gc='git commit -v'
alias gca='git commit -a -v'
alias gbr='git branch'
alias gbrc='git branch | grep \*'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gst='git status'
alias gadd='git add'
alias gaddu='git add -u'
alias gclone='git clone'
alias gdiff='git diff'
alias greset='git reset'
alias gclean='git clean -f -d -i'
alias gstash='git stash'
alias gunstash='git stash pop'
alias gpull='git pull'
alias gpush='git push'
alias gmerge='git merge'
alias grebase='git rebase'
alias gblame='git blame'
alias gshow='git show --name-only'
alias gremote='git remote -v'
alias glog="git log --pretty=format:'%h %ad | %s%d [%an]' --date=short --graph"
alias gerrit_review='git push origin HEAD:refs/for/master'
