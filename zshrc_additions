    . $HOME/.aliases
fi

if [ -f $HOME/.functions ]; then
    . $HOME/.functions
fi

if [ -f $HOME/.destination_aliases ]; then
    . $HOME/.destination_aliases
fi

if [ -f $HOME/.mount_aliases ]; then
    . $HOME/.mount_aliases
fi

if [ -f $HOME/.git_aliases ]; then
    . $HOME/.git_aliases
fi

if [ -f $HOME/.docker_aliases ]; then
    . $HOME/.docker_aliases
